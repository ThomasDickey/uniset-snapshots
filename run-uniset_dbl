this=${0##*/}
what=$(ident "$this" | awk '{printf "%s", $3}')
printf "  /* generated by %s %s */\n" "$this" "$what"
uniset \
	+WIDTH-W \
	+emoji/emoji-data.txt \
	-0000..00ff \
	-cat=Cn \
	-cat=Mn \
	c |\
awk '(NR==1){sub("{","static const struct interval doublewidth[] = {"); }{sub("^","  ");print;}'
